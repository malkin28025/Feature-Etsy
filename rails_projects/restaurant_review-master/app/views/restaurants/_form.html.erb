<%= form_for [ @restaurant, @review ], remote: true do |f| %>
  <fieldset>
    <legend>Add a review</legend>

    <%= f.label :comment %>
    <%= f.text_area :comment, rows: 10, cols: 35 %>

    <%= f.label :rating %>
    <%= f.select :rating, [
      ["1 (lowest)", 1],
      ["2 (not good)", 2],
      ["3 (bleh)",3],
      ["4 (pretty good)", 4],
      ["5 (I want to have this restaurant's baby)", 5]
      ] %>

    <%= f.label :recommend, "Would you recommend this joint?" %>
    <%= f.check_box :recommend %>

    <%= f.submit %>
  </fieldset>
<% end %>