<h1>Add a Restaurant</h1>

<%= form_for @restaurant do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br/>
  <%= f.label :address %>
  <%= f.text_area :address %>
  <br/>
  <%= f.label :phone, 'Phone number' %>
  <%= f.telephone_field :phone %>
  <br/>
  <%= f.submit 'DO IT! DO IT NOW!' %>
<% end %>